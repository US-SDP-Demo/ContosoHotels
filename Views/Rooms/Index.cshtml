@model ContosoHotels.ViewModels.RoomSearchViewModel
@{
    ViewData["Title"] = "Find Your Perfect Room";
}

<div class="hero-section bg-primary text-white text-center py-5 mb-4">
    <div class="container">
        <h1 class="display-4 fw-bold">Find Your Perfect Room</h1>
        <p class="lead">Discover comfort and luxury at Contoso Hotels</p>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg">
                <div class="card-header bg-light">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-search me-2"></i>Search Available Rooms
                    </h3>
                </div>
                <div class="card-body">
                    <form asp-controller="Rooms" asp-action="Search" method="post">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="CheckInDate" class="form-label fw-bold">
                                    <i class="fas fa-calendar-alt me-1"></i>Check-in Date
                                </label>
                                <input asp-for="CheckInDate" class="form-control" type="date" required />
                                <span asp-validation-for="CheckInDate" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="CheckOutDate" class="form-label fw-bold">
                                    <i class="fas fa-calendar-alt me-1"></i>Check-out Date
                                </label>
                                <input asp-for="CheckOutDate" class="form-control" type="date" required />
                                <span asp-validation-for="CheckOutDate" class="text-danger"></span>
                            </div>
                        </div>
                          <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="City" class="form-label fw-bold">
                                    <i class="fas fa-city me-1"></i>City
                                </label>
                                <select asp-for="City" class="form-select">
                                    <option value="">Any City</option>
                                    <option value="New York">New York</option>
                                    <option value="Miami">Miami</option>
                                    <option value="Los Angeles">Los Angeles</option>
                                    <option value="San Francisco">San Francisco</option>
                                    <option value="Chicago">Chicago</option>
                                    <option value="Boston">Boston</option>
                                    <option value="Seattle">Seattle</option>
                                    <option value="Denver">Denver</option>
                                    <option value="Austin">Austin</option>
                                    <option value="San Diego">San Diego</option>
                                </select>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="NumberOfGuests" class="form-label fw-bold">
                                    <i class="fas fa-users me-1"></i>Number of Guests
                                </label>
                                <input asp-for="NumberOfGuests" class="form-control" type="number" min="1" max="10" required />
                                <span asp-validation-for="NumberOfGuests" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="RoomType" class="form-label fw-bold">
                                    <i class="fas fa-bed me-1"></i>Room Type
                                </label><select asp-for="RoomType" class="form-select">
                                    <option value="">Any Room Type</option>
                                    <option value="Standard">Standard Room</option>
                                    <option value="Deluxe">Deluxe Room</option>
                                    <option value="Suite">Suite</option>
                                    <option value="Penthouse">Penthouse</option>
                                    <option value="Family">Family Room</option>
                                    <option value="Business">Business Room</option>
                                </select>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="MaxPrice" class="form-label fw-bold">
                                    <i class="fas fa-dollar-sign me-1"></i>Maximum Price per Night
                                </label>
                                <input asp-for="MaxPrice" class="form-control" type="number" step="0.01" placeholder="No limit" />
                            </div>
                        </div>
                        
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary btn-lg px-5">
                                <i class="fas fa-search me-2"></i>Search Rooms
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row mt-5">
        <div class="col-md-4 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-wifi fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">Free WiFi</h5>
                    <p class="card-text">Stay connected with complimentary high-speed internet throughout the hotel.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-swimming-pool fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">Pool & Spa</h5>
                    <p class="card-text">Relax and unwind in our luxurious pool and spa facilities.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-concierge-bell fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">24/7 Concierge</h5>
                    <p class="card-text">Our dedicated concierge team is here to assist you around the clock.</p>
                </div>
            </div>        </div>
    </div>
    
    <!-- Room Types Showcase -->
    <div class="row mt-5">
        <div class="col-12">
            <h2 class="text-center mb-4">Explore Our Room Types</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100 shadow-sm border-0">
                <img src="~/images/rooms/standard.jpeg" alt="Standard Room" class="card-img-top room-preview-image">
                <div class="card-body">
                    <h5 class="card-title">Standard Room</h5>
                    <p class="card-text">Comfortable accommodations with essential amenities for a pleasant stay.</p>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100 shadow-sm border-0">
                <img src="~/images/rooms/deluxe.jpeg" alt="Deluxe Room" class="card-img-top room-preview-image">
                <div class="card-body">
                    <h5 class="card-title">Deluxe Room</h5>
                    <p class="card-text">Enhanced comfort with premium amenities and upgraded furnishings.</p>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100 shadow-sm border-0">
                <img src="~/images/rooms/suite.jpeg" alt="Suite" class="card-img-top room-preview-image">
                <div class="card-body">
                    <h5 class="card-title">Suite</h5>
                    <p class="card-text">Spacious luxury with separate living area and premium amenities.</p>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100 shadow-sm border-0">
                <img src="~/images/rooms/penthouse.jpeg" alt="Penthouse" class="card-img-top room-preview-image">
                <div class="card-body">
                    <h5 class="card-title">Penthouse</h5>
                    <p class="card-text">Ultimate luxury with breathtaking views and exclusive amenities.</p>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100 shadow-sm border-0">
                <img src="~/images/rooms/family.jpeg" alt="Family Room" class="card-img-top room-preview-image">
                <div class="card-body">
                    <h5 class="card-title">Family Room</h5>
                    <p class="card-text">Perfect for families with extra space and additional sleeping arrangements.</p>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100 shadow-sm border-0">
                <img src="~/images/rooms/business.jpeg" alt="Business Room" class="card-img-top room-preview-image">
                <div class="card-body">
                    <h5 class="card-title">Business Room</h5>
                    <p class="card-text">Designed for business travelers with work desk and professional amenities.</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Set minimum date to today
            var today = new Date().toISOString().split('T')[0];
            $('#CheckInDate, #CheckOutDate').attr('min', today);
            
            // Update checkout minimum date when checkin changes
            $('#CheckInDate').change(function() {
                var checkInDate = $(this).val();
                $('#CheckOutDate').attr('min', checkInDate);
                
                // Clear checkout if it's before checkin
                var checkOutDate = $('#CheckOutDate').val();
                if (checkOutDate && checkOutDate <= checkInDate) {
                    $('#CheckOutDate').val('');
                }
            });
        });
    </script>
}
